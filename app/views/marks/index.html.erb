<p id="notice"><%= notice %></p>

<h1>Marks</h1>

<table id="markTable" class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th>Student</th>
      <th>Subject</th>
      <th>Mark</th>
      <th>Show Action</th>
      <th>Edit Action</th>
      <th>Destroy Action</th>
    </tr>
  </thead>

  <tbody>
    <% @marks.each do |mark| %>
      <tr>
        <td><%= mark.student.name %></td>
        <td><%= mark.subject.subjectName %></td>
        <td><%= mark.individualMark %></td>
        <td><%= link_to 'Show', mark %></td>
        <% if mark.subject.subjectName == @subjectName %>
          <td><%= link_to 'Edit', edit_mark_path(mark) %></td>
          <td><%= link_to 'Destroy', mark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<script>
  $(document).ready(function() {
      $('#markTable').DataTable();
  } );
</script>