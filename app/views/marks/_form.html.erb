<%= form_with(model: mark, local: true) do |form| %>
  

  <div class="form-group row">
    <%= form.label :student_id, "Student Name",:class=>"col-sm-2 col-form-label" %>
    <div class="col-sm-10"> 
      <%= form.collection_select :student_id, Student.all, :id, :name, {:include_blank => "Please select Student"}, :class=>"form-control", :required => 'true' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :subject_id, "Subject", :class=>"col-sm-2 col-form-label" %>
    <div class="col-sm-10"> 
        <%= form.collection_select :subject_id, Subject.where(subjectName: @subjectName), :id, :subjectName,{}, :class=>"form-control",  readonly: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :individualMark, "Mark", :class=>"col-sm-2 col-form-label" %>
    <div class="col-sm-10"> 
      <%= form.number_field :individualMark, :class=>"form-control", :oninput=> "javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength)",
      :type =>"number",  :maxlength => "2", :required => 'true'%>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "submit"%>
  </div>
<% end %>


