<%= form_with(model: student, local: true) do |form| %>
  <div class="form-group row">
    <%= form.label :rollNo, "Student Roll No", :class=>"col-sm-2 col-form-label" %>
    <div class="col-sm-10"> 
      <%= form.text_field :rollNo, :class=>"form-control", :id => 'rollNo',:required => 'true', :onblur=>"studentRollNo()"%>
    </div>
  </div>


  <div class="form-group row">
    <%= form.label :name, "Student Name", :class=>"col-sm-2 col-form-label" %>
    <div class="col-sm-10"> 
      <%= form.text_field :name, :class=>"form-control", :required => 'true'%>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Submit" %>
  </div>
<% end %>

<script>
function studentRollNo() {
    var rollNo = document.getElementById("rollNo").value;
    if(rollNo.length <=5){
      alert('Student RollNo atleast 5 character')
   }
   
  }
</script>
