<p id="notice"><%= notice %></p>

<h1>Subjects List</h1>

<table id="subjectTable" class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th>Subject Code</th>
      <th>Subject Name</th>
      <th>Teacher Name</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.subjectCode %></td>
        <td><%= subject.subjectName %></td>
        <td><%= subject.teacher.teacherName %></td>
        <td><%= link_to 'Show', subject %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-danger"><%= link_to 'New Subject', new_subject_path %>
</button>
<script>
  $(document).ready(function() {
      $('#subjectTable').DataTable();
  } );
</script>