<p id="notice"><%= notice %></p>

<h1>Teachers List</h1>

<table id="teacherTable" class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th>Teacher Name</th>
      <th>Teacher Email</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.teacherName %></td>
        <td><%= teacher.user.email %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<button type="button" class="btn btn-danger"><%= link_to 'New Teacher', new_teacher_path %>
</button>



<script>
  $(document).ready(function() {
      $('#teacherTable').DataTable();
  } );
</script>